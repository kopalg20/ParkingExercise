{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "rootDir": ".",
    "outDir": "dist",

    "sourceMap": true,
    "declaration": false,

    "verbatimModuleSyntax": false,
    "isolatedModules": false,
    "moduleDetection": "auto"
  },
  "include": ["*.ts"]
}
